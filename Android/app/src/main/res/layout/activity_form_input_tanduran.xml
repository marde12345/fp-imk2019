<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activities.FormInputTanduranActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_margin="25dp"
        app:cardBackgroundColor="@color/colorFormInput">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/etNama"
            android:background="@drawable/rounded_buttons"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:hint="Nama Tanduran"
            android:padding="15dp"
            android:textColorHint="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.624"/>
        <Spinner
            android:background="@drawable/rounded_buttons"
            android:layout_margin="20dp"
            android:paddingHorizontal="10dp"
            android:hint="Kategori"
            android:spinnerMode="dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp_variety">

        </Spinner>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal tanam"
                android:padding="20dp"
                android:background="@drawable/rounded_buttons"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/ic_today_black_24dp"/>
            <TextView
                android:id="@+id/dateResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal tanam: "/>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/fabForm"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        app:borderWidth="2dp"
        android:backgroundTint="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>